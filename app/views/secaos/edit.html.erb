<div class="page-header">
  <h1>Editar Secao #<%= @secao.id %>
      <button onclick="location.href = '<%= secaos_url %>';" class="btn btn-default btn-sm pull-right"><span class="glyphicon glyphicon-arrow-left "></span></button>
  </h1>
</div>

<% if @secao.errors.any? %>
  <% @secao.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(secao_url(@secao), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :secao, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :secao, @secao.secao, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Atualizar Secao", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
