<div class="page-header">
  <h1>Secoes Cadastradas</h1>
</div>

<p><%= link_to 'Adicionar nova secao', new_secao_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Secao</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @secaos.each do |secao| %>
      <tr>
        <td><%= secao.secao %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, secao_url(secao), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_secao_url(secao), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, secao_url(secao), method: 'delete', data: { confirm: "Do you really want to delete this secao?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

