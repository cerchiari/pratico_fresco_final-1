<div class="page-header">
  <h1>Itens cadastrados</h1>
</div>

<p><%= link_to 'Adicione novo item', new_item_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Secao</th>
      <th>Subsecao</th>
      <th>Item</th>
      <th>Marca</th>
      <th>Descricao</th>
      <th>Preco</th>
      <th>Imagem</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.secao.secao %></td>
        <td><%= item.subsecao.subsecao %></td>
        <td><%= item.item %></td>
        <td><%= item.marca %></td>
        <td><%= item.descricao %></td>
        <td><%= item.preco %></td>
        <td><%= image_tag(item.imagem, size: "60") %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, item_url(item), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_item_url(item), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, item_url(item), method: 'delete', data: { confirm: "Realmente deseja deletar esse item?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

