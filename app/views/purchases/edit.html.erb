<div class="page-header">
  <h1>Editing Purchase #<%= @purchase.id %></h1>
</div>

<%= form_tag(purchase_url(@purchase), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :order_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :order_id, @purchase.order_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :item_id, @purchase.item_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :quantidade, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :quantidade, @purchase.quantidade, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Purchase", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
