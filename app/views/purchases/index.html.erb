<div class="page-header">
  <h1>Purchases</h1>
</div>

<p><%= link_to 'Add a New Purchase', new_purchase_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Order</th>
      <th>Item</th>
      <th>Quantidade</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.order_id %></td>
        <td><%= purchase.item.item %></td>
        <td><%= purchase.quantidade %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, purchase_url(purchase), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_purchase_url(purchase), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, purchase_url(purchase), method: 'delete', data: { confirm: "Do you really want to delete this purchase?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

