<div class="page-header">
  <h1>Novo Usuario</h1>
</div>

<%= form_tag(users_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :nome, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :nome, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :sobrenome, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :sobrenome, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :telefone, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :telefone, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :endereco, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :endereco, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :cidade, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :cidade, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :estado, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :estado, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :cep, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :cep, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Criar cadastro", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
