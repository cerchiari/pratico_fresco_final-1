  <style>
      .padrao{
        size: 16pt;
        width: 180px;
        color: black;
      }
  </style>

<h2>Editar Cadastro </h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

 <p></p>
  <div><%= f.label :nome, :class=>'padrao' %>
  <%= f.text_field :nome, placeholder: "Nome" %>*</div>

  <div><%= f.label :sobrenome, :class=>'padrao' %>
  <%= f.text_field :sobrenome %>*</div>

  <div><%= f.label :telefone, :class=>'padrao' %>
  <%= f.number_field :telefone, placeholder: "Telefone" %></div>

  <div><%= f.label :endereco, :class=>'padrao' %>
  <%= f.text_field :endereco %></div>

  <div><%= f.label :cidade, :class=>'padrao' %>
  <%= f.text_field :cidade %></div>

  <div><%= f.label :estado, :class=>'padrao' %>
  <%= f.text_field :estado %></div>

  <div><%= f.label :cep, :class=>'padrao' %>
  <%= f.number_field :cep %></div>

  <div><%= f.label :email, :class=>'padrao' %>
  <%= f.email_field :email, :autofocus => true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :current_password, 'Senha Atual', :class=>'padrao' %>
  <%= f.password_field :current_password %><i></i><br /></div>

  <div><%= f.label :password, 'Nova senha', :class=>'padrao' %>
  <%= f.password_field :password, :autocomplete => "off" %><i>(deixar em branco se nao quiser alterar senha)</i><br /></div>

  <div><%= f.label :password_confirmation, 'Confirmar Nova Senha', :class=>'padrao' %>
  <%= f.password_field :password_confirmation %></div>


  <div><%= f.submit "Atualizar" %></div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Tem certeza?" }, :method => :delete %></p>

<%= link_to "Voltar", :back %>
