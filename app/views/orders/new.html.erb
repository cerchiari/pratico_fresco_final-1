<div class="page-header">
  <h1>Nova Compra</h1>
</div>

<%= form_tag(orders_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :nome), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :status, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :status, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :data, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :data, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Order", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
