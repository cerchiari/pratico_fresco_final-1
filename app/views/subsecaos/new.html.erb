<div class="page-header">
  <h1>Cadastrar nova Sub-secao
      <button onclick="location.href = '<%= subsecaos_url %>';" class="btn btn-default btn-sm pull-right"><span class="glyphicon glyphicon-arrow-left "></span></button>
  </h1>

</div>

<% if @subsecao.errors.any? %>
  <% @subsecao.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag(subsecaos_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :secao_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :secao_id, options_from_collection_for_select(Secao.all, :id, :secao), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :subsecao, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :subsecao, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Criar Sub-secao", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>


